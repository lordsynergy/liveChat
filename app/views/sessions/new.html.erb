<%= form_with scope: :session, url: session_path, data: {turbo: false} do |f| %>
  <div class="row justify-content-center">
    <div class='col-md-6'>
      <h3 class='text-center mb-3 mt-5'>Your email and password</h3>

      <form>
        <div class="form-group mb-3">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control form-control-lg' %>
        </div>

        <div class="form-group mb-3">
          <%= f.password_field :password, autofocus: true, placeholder: 'Password', class: 'form-control form-control-lg' %>
        </div>

        <div class="actions mb-3">
          <%= f.submit 'Submit', class: 'btn btn-info' %>
        </div>
      </form>
<% end %>
<%#= render 'users/links' %>
    </div>
  </div>


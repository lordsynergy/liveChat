<% if current_user %>
  <%= form_for @room do |f| %>
    <div class="row justify-content-center">
      <div class="col-sm-4">
        <div class="col input-group mb-3">
          <%= f.text_field :name, placeholder: 'Room name', class: 'form-control' %>
          <%= f.submit 'Create room', class: 'btn btn-info' %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>